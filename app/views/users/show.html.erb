<% if flash[:notice] %>
   <div class="flash">
     <%= flash[:notice] %>
   </div>
 <% end %>


<div class="container"> 
<div class="row">
 <div class="col-xs-3">

<div class="profile-container">
   <h1>User info</h1>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
   <table class="table table-striped">
   <tr>
   <td>
   <h3>name:</h3>
   </td>
   <td>
   <h3 class="profile-name"><%= @user.name %></h3>
   </td>
   <td>
   </tr>
   <tr>
   <td>
   <h3>introduction:</h3>
   </td>
   <td>
   <h3 class="profile-introduction"><%= @user.introduction %></h3>
   </td>
   </tr>
   </table>
    <% if @user.id == current_user.id %>
        <p><%= link_to "Edit", edit_user_path(@user), class: "btn btn-default" %></p>
    <% end %>
    </table>
</div>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
   <% if @book.errors.any? %>
   <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>

    <% end %>
</div>
<div class="col-xs-9">
<h1>Books</h1>
<table class="table table-striped">
   <thead>
      <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
      </tr>
   </thead>
 <tbody>
   <% @books.each do |book| %>
      <tr>
      <td><%= attachment_image_tag @user, :profile_image,  format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "35x35"  %></td>
         <td><%=link_to book.title,book_path(book.id) %></td>
         <td><%=book.body %></td>
      </tr>
         <% end %>
 </tboby>
</table>
</div>
</div>


